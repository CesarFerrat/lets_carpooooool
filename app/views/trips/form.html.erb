    </div>
  </div>
</div>
<script>

$('input[type=radio]').on('change', function () {
  var seat_number = $('input[type=radio]:checked').val();
  $('#seat_number').val(seat_number);
});


$('.js-submit').on('click', function(){

  var new_trip = {
  origin: $('#origin').val(),
  destination: $('#destination').val(),
  lat1: $('#lat1').val(),
  lng1: $('#lng1').val(),
  lat2: $('#lat2').val(),
  lng2: $('#lng2').val(),
  city1: $('#city1').val(),
  // country1: $('#country1').val(),
  city2: $('#city2').val(),
  // country2: $('#country2').val(),
  date: $('#date').val(),
  time: $('#time').val(),
  seat: $('#seat_number').val(),
  price: $('#price').val(),
  description: $('#description').val(),
  };
  console.log(new_trip);
  window.sessionStorage.setItem("new-trip", JSON.stringify(new_trip));

  $('#login-signup').modal('toggle');

  $('.btn-success').on('click', logIn);
  $('.btn-primary').on('click', signUp);

 }
);



function logIn() {
  $('#login-signup').modal('toggle')
  $('#login').modal('toggle')
};

function signUp() {

  $('#login-signup').modal('toggle')
  $('#signup').modal('toggle')
};

</script>
